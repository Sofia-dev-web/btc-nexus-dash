<body>

<div class="container">
    <h1>Bitcoin Live Monitor</h1>
    <div class="price-box" id="btc-price">Fetching Price...</div>
    
    <div class="wallet">
        <h3>My Bitcoin Wallet</h3>
        <div id="balance-display" style="font-size: 1.5rem;">0.00000000 BTC</div>
        <p class="status">Membership Status: <span id="membership-tag" style="color:red">Standard</span></p>
    </div>

    <button class="btn" onclick="requestWithdraw()">Withdraw Funds</button>
    <p style="font-size: 0.8rem; margin-top: 15px;">*Premium Membership required for external transfers.</p>

    <div id="admin-panel">
        <button onclick="activateFlashFunds()" style="background: none; border: 1px solid #474d57; color: #474d57; cursor: pointer;">Admin: Add Flash Funds</button>
    </div>
</div>

<script>
    // 1. Get Real-Time Bitcoin Price
    async function getBTCPrice() {
        try {
            const response = await fetch('https://api.binance.com/api/v3/ticker/price?symbol=BTCUSDT');
            const data = await response.json();
            const price = parseFloat(data.price).toLocaleString();
            document.getElementById('btc-price').innerText = "$" + price;
        } catch (err) {
            document.getElementById('btc-price').innerText = "Reconnecting...";
        }
    }
    setInterval(getBTCPrice, 5000); // Update every 5 seconds
    getBTCPrice();

    // 2. Flash Funds & Membership Logic
    function activateFlashFunds() {
        // This only changes things in YOUR browser
        localStorage.setItem('myBalance', '8.45000000');
        localStorage.setItem('myStatus', 'Premium');
        alert("Flash Funds Activated! Refreshing...");
        location.reload();
    }

    // Load data from browser memory
    window.onload = function() {
        const savedBal = localStorage.getItem('myBalance') || '0.00000000';
        const savedStatus = localStorage.getItem('myStatus') || 'Standard';
        
        document.getElementById('balance-display').innerText = savedBal + " BTC";
        document.getElementById('membership-tag').innerText = savedStatus;
        if(savedStatus === 'Premium') document.getElementById('membership-tag').style.color = '#f3ba2f';
    };

    function requestWithdraw() {
        const status = localStorage.getItem('myStatus');
        if(status === 'Premium') {
            alert("Transfer Request Received. Processing via Blockchain...");
        } else {
            alert("Insufficient Privileges: Your account must be upgraded to Premium Membership to unlock withdrawals.");
        }
    }
</script>

</body>
