        .price-box { font-size: 2.5rem; color: #f3ba2f; margin: 20px 0; font-weight: bold; }
        .wallet { border: 1px solid #474d57; padding: 15px; border-radius: 8px; margin: 20px 0; background: #2b3139; }
        .btn { background-color: #f3ba2f; color: black; border: none; padding: 12px 25px; border-radius: 5px; font-weight: bold; cursor: pointer; font-size: 1rem; }
        .btn:hover { background-color: #d9a528; }
        .status { font-size: 0.9rem; color: #848e9c; margin-top: 10px; }
        #admin-panel { margin-top: 40px; border-top: 1px dashed #474d57; padding-top: 20px; }
    </style>
